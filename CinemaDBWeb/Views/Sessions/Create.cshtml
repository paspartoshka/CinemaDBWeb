@model CinemaDBWeb.Models.Session

@{
    ViewData["Title"] = "Создать Сеанс";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="SessionDate">Дата и время сеанса</label>
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Фильм</label>
        <select asp-for="MovieId" asp-items="ViewBag.MovieId" class="form-control"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Зал</label>
            <select asp-for="HallId" asp-items="ViewBag.HallId" class="form-control"></select>
            <a asp-controller="Halls" asp-action="Create" class="btn btn-outline-secondary">Создать зал</a>
            <span asp-validation-for="HallId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Базовая цена</label>
        <input asp-for="BasePrice" class="form-control" />
        <span asp-validation-for="BasePrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
